CFLAGS = -Wall -Wextra

all : cfv1

lota.o : lota.c lota.h
	gcc -c $(CFLAGS) lota.c

lotb.o : lotb.c lotb.h lota.h
	gcc -c $(CFLAGS) lotb.c

lotbgraphique.o : lotbgraphique.c lotbgraphique.h lotb.h
	gcc -c  $(CFLAGS) lotbgraphique.c -lSDL	

main.o : main.c lota.h lotb.h lotbgraphique.h
	gcc -c $(CFLAGS) main.c -lSDL

cfv1 : main.o lota.o lotb.o lotbgraphique.o
	gcc -o cfv1 main.o lota.o lotb.o lotbgraphique.o -lSDL


doc :
	doxygen -g 